@model IEnumerable<assignment_shop.Models.ProductModels>

@{
    ViewBag.Title = "Home Page";
}

<div style="margin-top: 10px">
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <form method="post" style="display: contents">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Find!</button>
                    </span>
                    <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Search for...">
                </form>
            </div>
        </div>
        <div class="col-lg-9">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Thumbnail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.Category.Name)*@
                        Category
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    <img src="@item.Thumbnail" style="width: 100px" alt="thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("AddToCart", "Add", "Cart", new { productId = item.Id }, null)
                </td>
            </tr>
                }

            </table>
        </div>
    </div>
</div>

